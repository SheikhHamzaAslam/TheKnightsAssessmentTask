<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_200"
    android:padding="10dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Category:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="18sp"
        android:textColor="#FFFF"
        android:fontFamily="sans-serif-medium"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cat" />

    <TextView
        android:id="@+id/name_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20sp"
        android:textColor="#FFFF"
        android:fontFamily="sans-serif-black"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cat"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#FFFF"
        android:fontFamily="sans-serif-medium"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@+id/category"
        app:layout_constraintStart_toEndOf="@+id/name_"/>

    <TextView
        android:id="@+id/make_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make:"
        android:textSize="20sp"
        android:textColor="#FFFF"
        android:fontFamily="sans-serif-black"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/name_"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#FFFF"
        android:fontFamily="sans-serif-medium"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintStart_toEndOf="@+id/make_"/>

</androidx.constraintlayout.widget.ConstraintLayout>